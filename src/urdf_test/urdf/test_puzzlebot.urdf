<?xml version="1.0"?>
<robot name="puzzlebot">

  <material name="gray">
    <color rgba="0.5 0.5 0.5 0.8"/>
  </material>

  <material name="blue">
    <color rgba="0.4 0.7 1 0.6"/>
  </material>

  <link name="base_link">
    <visual>
      <origin rpy="1.57075 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://urdf_test/meshes/MCR2_1000_13_Chassis.stl"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <link name="r_wheel">
    <visual>
      <origin rpy="0 1.57075 3.14159"/>
      <geometry>
        <mesh filename="package://urdf_test/meshes/MCR2_1000_1_1_Wheel_Coupler_2.stl"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <link name="l_wheel">
    <visual>
      <origin rpy="0 1.57075 0"/>
      <geometry>
        <mesh filename="package://urdf_test/meshes/MCR2_1000_1_1_Wheel_Coupler_2.stl"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="chassis_to_l_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="l_wheel"/>
    <axis xyz="-1 0 0"/>
    <origin xyz="-0.085 -0.05 0"/>
  </joint>

  <joint name="chassis_to_r_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="r_wheel"/>
    <axis xyz="-1 0 0"/>
    <origin xyz="0.085 -0.05 0"/>
  </joint>
</robot>